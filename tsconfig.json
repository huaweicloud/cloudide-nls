{
    "compilerOptions": {
        "strict": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es6",
        "lib": [
            "es6"
        ],
        "declaration": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "lib"
    },
    "include": ["src"]
}